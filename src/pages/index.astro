---
import Layout from "../layouts/Layout.astro";
import Service from "../components/Service.astro";
import NavBar from "../components/NavBar.astro";
import DonationButton from "../components/DonationButton.astro";
import QuestionsForm from "../components/QuestionsForm.astro";
import "../styles/global.css";
import "../styles/blog.css"
import "../styles/carousel.css"
import Footer from "../components/Footer.astro";
import Blog from "../components/Blog.astro";
import Carousel from "../components/carousel.astro";

const allPosts = await Astro.glob("../pages/posts/*.md");
---

<script type="text/javascript" src="mobile.js"></script>


<Layout title="Welcome to Parity.">
  <header>
    <a class="logo" href="/"><img src="/Parity/img/Parity-colour-logo.jpg"
      style="width: 230px; height: 130px;"
      alt="logo" /></a>
    <NavBar />
    <DonationButton />
  </header>

  <section id="headimg"
    <div class="himg">
      <img src="Parity/Links/ParityActivityScheme.png"
      width="2620px"
      height="600px"
      style="width: 2620px; height: 600px;"
      alt="Banner image of a person with a disability holding flowers, while surrounded by nature, in a wheelchair. ">
    ></div>
    <div class="imgbox">
      <h1>A LOCAL CHARITY THAT PROVIDES A LIFELINE</h1>
      <p>When people with multiple disabilities finish school, our services are there to meet their needs and open up a world of opportunities</p>
    </div>

  <section id="services">
    <div class="container">
      <div class="section-title">
        <h1>Our Services</h1>
        <div class="line"></div>
      </div>

      <div class="services">
        <Service
          title="What we do:"
          description="We function through comprehensive day services, offering a lifeline to individuals with disabilities, leveraging various utilities."
          image="/Parity/Links/can.png"
          link="/HTML//Services/wwd.html"
        />

        <Service
          title="Our day services:"
          description="We function through comprehensive day services, offering a lifeline to individuals with disabilities, leveraging various utilities."
          image="/Parity/Links/3.png"
          link="/HTML//Services/wwd.html"
        />

        <Service
          title="Music Therapy:"
          description="Parity utilizes music therapy to aid individuals with disabilities, through emotional expression, physical movement, and social connection."
          image="/Parity/Links/climb.png"
          link="/HTML//Services/wwd.html"
        />

        <Service
          title="How can you help?"
          description="You can support us through charitable donations, volunteering, raising awareness, organizing fundraisers and attending events."
          image="/Parity/Links/Staff4.jpg"
          link="/HTML//Services/wwd.html"
        />
      </div>
    </div>
  </section>

  <section id="carousel">
    <div class="container">
      
      <Carousel/>
    </div>
  </section>



  <section id="Blog">
    <div class="container">
    <Blog/>
  </section>

  <QuestionsForm />

  <Footer />
</Layout>
